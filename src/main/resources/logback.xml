<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds" debug="true">

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%-61(%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger{0})) : %green(%msg%n)</pattern>
        </encoder>
    </appender>

    <property resource="db/database.properties" />

    <appender name="db" class="ch.qos.logback.classic.db.DBAppender">

        <filter class="net.coffeemachine.util.LoggerNameFilter" />

        <connectionSource class="ch.qos.logback.core.db.DriverManagerConnectionSource">-->
            <driverClass>${driver}</driverClass>
            <url>${url}</url>
            <user>${user}</user>
            <password>${password}</password>
        </connectionSource>
    </appender>

    <logger name="org.springframework" level="info"/>
    <logger name="springfox" level="warn"/>
    <logger name="net.coffeemachine" level="info">
        <appender-ref ref="db"/>
    </logger>

    <root level="debug">
        <appender-ref ref="console"/>
    </root>
</configuration>
